---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import Features from '../components/Features.astro';
import Specialties from '../components/Specialties.astro';
import Testimonials from '../components/Testimonials.astro';
import CTA from '../components/CTA.astro';
import { getEntry } from 'astro:content';

const t = await getEntry('pages', 'en');
---

<Layout title="AI Medical Documentation">
  <Hero translations={t.data} />
  <Stats translations={t.data} />
  <Features translations={t.data} />
  <Specialties translations={t.data} />
  <Testimonials translations={t.data} />
  <CTA translations={t.data} />
</Layout>
