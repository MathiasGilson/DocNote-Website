---
import Layout from '../../../layouts/Layout.astro';
import { locales, isValidLocale, getLocalizedPath, type Locale } from '../../../utils/i18n';
import { getEntry } from 'astro:content';

export function getStaticPaths() {
  return [];
}

const { locale, slug } = Astro.params;

if (!isValidLocale(locale)) {
  return Astro.redirect('/en/blog2');
}

const entry = await getEntry('pages', locale as Locale);
const t = entry.data;

const supabaseUrl = import.meta.env.VITE_SUPABASE_URL || '';
---

<Layout title={t.blog2?.postTitle || 'LinkedIn Update'}>
  <article class="pt-32 pb-20">
    <div id="loading" class="flex justify-center items-center min-h-[400px]">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
    </div>

    <div id="error" class="hidden max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-12">
      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <h2 class="text-2xl font-bold text-red-900 mb-2">
          {t.blog2?.postNotFound || 'Post not found'}
        </h2>
        <p class="text-red-700 mb-4">
          {t.blog2?.postNotFoundMessage || 'The post you are looking for could not be found.'}
        </p>
        <a
          href={getLocalizedPath('/blog2', locale as Locale)}
          class="inline-block px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
        >
          {t.blog2?.backToBlog || 'Back to Updates'}
        </a>
      </div>
    </div>

    <div id="post-content" class="hidden max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a
          href={getLocalizedPath('/blog2', locale as Locale)}
          class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          {t.blog2?.backToBlog || 'Back to Updates'}
        </a>
      </div>

      <header class="mb-8">
        <h1 id="post-title" class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4"></h1>
        <div class="flex items-center gap-4 text-gray-600">
          <time id="post-date"></time>
        </div>
      </header>

      <div id="post-body" class="prose prose-lg max-w-none">
      </div>

      <div class="mt-12 pt-8 border-t border-gray-200">
        <a
          id="linkedin-link"
          href="#"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-[#0A66C2] text-white rounded-lg hover:bg-[#004182] transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          {t.blog2?.viewOnLinkedIn || 'View on LinkedIn'}
        </a>
      </div>
    </div>
  </article>

  <script define:vars={{ supabaseUrl, slug, locale }}>
    async function fetchPost() {
      try {
        const response = await fetch(`${supabaseUrl}/functions/v1/linkedin-posts?page=1&limit=100`);

        if (!response.ok) {
          throw new Error('Failed to fetch posts');
        }

        const data = await response.json();
        const post = data.posts.find(p => p.slug === slug);

        if (!post) {
          throw new Error('Post not found');
        }

        return post;
      } catch (error) {
        console.error('Error fetching post:', error);
        throw error;
      }
    }

    function formatDate(dateString) {
      const date = new Date(dateString);
      const options = {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      };

      const localeMap = {
        'de': 'de-DE',
        'fr': 'fr-FR',
        'en': 'en-US'
      };

      return date.toLocaleDateString(localeMap[locale] || 'en-US', options);
    }

    function formatContent(content) {
      return content
        .split('\n')
        .map(line => {
          line = line.trim();
          if (!line) return '<br>';
          if (line.startsWith('â€¢') || line.startsWith('-')) {
            return `<li>${line.substring(1).trim()}</li>`;
          }
          if (line.match(/^#{1,6}\s/)) {
            const level = line.match(/^#{1,6}/)[0].length;
            const text = line.replace(/^#{1,6}\s/, '');
            return `<h${level}>${text}</h${level}>`;
          }
          return `<p>${line}</p>`;
        })
        .join('');
    }

    async function loadPost() {
      const loading = document.getElementById('loading');
      const error = document.getElementById('error');
      const content = document.getElementById('post-content');

      try {
        const post = await fetchPost();

        document.getElementById('post-title').textContent = post.title;
        document.getElementById('post-date').textContent = formatDate(post.publishedAt);
        document.getElementById('post-body').innerHTML = formatContent(post.content);
        document.getElementById('linkedin-link').href = post.linkedinUrl;

        document.title = `${post.title} - DocNote`;

        loading.classList.add('hidden');
        content.classList.remove('hidden');
      } catch (err) {
        loading.classList.add('hidden');
        error.classList.remove('hidden');
      }
    }

    loadPost();
  </script>
</Layout>
