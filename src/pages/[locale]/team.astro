---
import Layout from "../../layouts/Layout.astro"
import { locales, isValidLocale, type Locale } from "../../utils/i18n"
import { getEntry } from "astro:content"

export function getStaticPaths() {
    return locales.map((locale) => ({ params: { locale } }))
}

const { locale } = Astro.params

if (!isValidLocale(locale)) {
    return Astro.redirect("/en/team")
}

const entry = await getEntry("pages", locale as Locale)
const t = entry.data
---

<Layout title={t?.nav?.team || "Team"}>
    <section class="pt-32 pb-20">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <p class="text-sm uppercase tracking-widest text-gray-500 mb-3">About Us</p>
                <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-5">
                    {t.team.title}
                </h1>
                <p class="text-base text-gray-600 max-w-2xl mx-auto leading-relaxed">
                    {t.team.subtitle}
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-x-16">
                <div class="flex items-center gap-5 py-8">
                    <img
                        src="/images/dr_vincent_tan.jpg"
                        alt={t.team.members.vincentTan.name}
                        class="w-28 h-28 rounded-lg object-cover object-center flex-shrink-0"
                    />
                    <div>
                        <h3 class="text-lg font-bold text-gray-900">{t.team.members.vincentTan.name}</h3>
                        <p class="text-base text-gray-500">{t.team.members.vincentTan.role}</p>
                    </div>
                </div>

                <div class="flex items-center gap-5 py-8">
                    <img
                        src="/images/dre_alice_gilson.jpg"
                        alt={t.team.members.aliceGilson.name}
                        class="w-28 h-28 rounded-lg object-cover object-center flex-shrink-0"
                    />
                    <div>
                        <h3 class="text-lg font-bold text-gray-900">{t.team.members.aliceGilson.name}</h3>
                        <p class="text-base text-gray-500">{t.team.members.aliceGilson.role}</p>
                    </div>
                </div>

                <div class="flex items-center gap-5 py-8 border-t border-gray-200">
                    <img
                        src="/images/mathias_gilson.png"
                        alt={t.team.members.mathiasGilson.name}
                        class="w-28 h-28 rounded-lg object-cover flex-shrink-0"
                    />
                    <div>
                        <h3 class="text-lg font-bold text-gray-900">{t.team.members.mathiasGilson.name}</h3>
                        <p class="text-base text-gray-500">{t.team.members.mathiasGilson.role}</p>
                    </div>
                </div>

                <div class="flex items-center gap-5 py-8 border-t border-gray-200">
                    <img
                        src="/images/jeremy_yvinec.jpg"
                        alt={t.team.members.jeremyYvinec.name}
                        class="w-28 h-28 rounded-lg object-cover flex-shrink-0"
                    />
                    <div>
                        <h3 class="text-lg font-bold text-gray-900">{t.team.members.jeremyYvinec.name}</h3>
                        <p class="text-base text-gray-500">{t.team.members.jeremyYvinec.role}</p>
                    </div>
                </div>

                <div class="flex items-center gap-5 py-8 border-t border-gray-200">
                    <img
                        src="/images/hugo_roussel.jpg"
                        alt={t.team.members.hugoRoussel.name}
                        class="w-28 h-28 rounded-lg object-cover flex-shrink-0"
                    />
                    <div>
                        <h3 class="text-lg font-bold text-gray-900">{t.team.members.hugoRoussel.name}</h3>
                        <p class="text-base text-gray-500">{t.team.members.hugoRoussel.role}</p>
                    </div>
                </div>

                <div class="flex items-center gap-5 py-8 border-t border-gray-200">
                    <img
                        src="/images/eric_wei.jpg"
                        alt={t.team.members.ericWei.name}
                        class="w-28 h-28 rounded-lg object-cover flex-shrink-0"
                    />
                    <div>
                        <h3 class="text-lg font-bold text-gray-900">{t.team.members.ericWei.name}</h3>
                        <p class="text-base text-gray-500">{t.team.members.ericWei.role}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
