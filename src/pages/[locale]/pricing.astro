---
import Layout from '../../layouts/Layout.astro';
import { locales, isValidLocale, type Locale } from '../../utils/i18n';
import { getEntry } from 'astro:content';

export function getStaticPaths() {
  return locales.map((locale) => ({ params: { locale } }));
}

const { locale } = Astro.params;

if (!isValidLocale(locale)) {
  return Astro.redirect('/en/pricing');
}

const entry = await getEntry('pages', locale as Locale);
const t = entry.data;
---

<Layout title={t.nav.pricing}>
  <section class="pt-32 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
          {t.pricing.title}
        </h1>
        <p class="text-xl text-gray-600">
          {t.pricing.subtitle}
        </p>
      </div>

      <div class="flex items-center justify-center mb-12">
        <div class="relative inline-flex items-center border border-gray-200 rounded-xl p-1 bg-gray-50" id="toggle-wrapper">
          <div class="absolute top-1 bottom-1 rounded-lg bg-white shadow-sm border border-gray-200 transition-all duration-300 ease-out" id="toggle-bg"></div>
          <button class="relative z-10 px-6 py-2.5 text-sm font-medium rounded-lg transition-colors duration-300 text-gray-400" id="monthly-btn">
            {t.pricing.monthly}
          </button>
          <button class="relative z-10 px-6 py-2.5 text-sm font-medium rounded-lg transition-colors duration-300 text-gray-900 flex items-center gap-2" id="yearly-btn">
            {t.pricing.yearly}
            <span class="text-[10px] font-semibold text-green-700 bg-green-100 px-1.5 py-0.5 rounded leading-none">{t.pricing.save}</span>
          </button>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl p-8 border-2 border-primary-500 relative shadow-xl">
          <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-primary-500 text-white text-sm font-medium rounded-full">
            {t.pricing.professional.popular}
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t.pricing.professional.name}</h3>
          <p class="text-gray-600 mb-6">{t.pricing.professional.description}</p>
          <div class="mb-6">
            <span class="text-4xl font-bold text-gray-900" id="pro-price" data-monthly-usd={t.pricing.professional.monthlyPrice} data-yearly-usd={t.pricing.professional.price}>${t.pricing.professional.price}</span>
            <span class="text-gray-500">{t.pricing.perMonth}</span>
          </div>
          <ul class="space-y-3 mb-8">
            {t.pricing.professional.features.map((feature: string) => (
              <li class="flex items-center gap-3 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="https://buy.stripe.com/3cI9AU811cVa9Z69NO8g009" id="subscription-btn" data-yearly-url="https://buy.stripe.com/3cI9AU811cVa9Z69NO8g009" data-monthly-url="https://buy.stripe.com/14AbJ2811cVa9Z68JK8g00a" class="block w-full py-3 text-center font-medium text-white bg-primary-500 rounded-lg hover:bg-primary-600 transition-colors">
            {t.pricing.subscription}
          </a>
        </div>

        <div class="bg-white rounded-2xl p-8 border border-gray-200 hover:border-primary-300 transition-colors">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t.pricing.enterprise.name}</h3>
          <p class="text-gray-600 mb-6">{t.pricing.enterprise.description}</p>
          <div class="mb-6">
            <span class="text-4xl font-bold text-gray-900">{t.pricing.enterprise.price}</span>
          </div>
          <ul class="space-y-3 mb-8">
            {t.pricing.enterprise.features.map((feature: string) => (
              <li class="flex items-center gap-3 text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#" class="block w-full py-3 text-center font-medium text-primary-600 border border-primary-600 rounded-lg hover:bg-primary-50 transition-colors">
            {t.pricing.enterprise.contact}
          </a>
        </div>
      </div>

      <div class="mt-24 max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">{t.pricing.faq.title}</h2>
        <div class="space-y-6">
          <div class="bg-white rounded-xl p-6 border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{t.pricing.faq.q1}</h3>
            <p class="text-gray-600">{t.pricing.faq.a1}</p>
          </div>
          <div class="bg-white rounded-xl p-6 border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{t.pricing.faq.q2}</h3>
            <p class="text-gray-600">{t.pricing.faq.a2}</p>
          </div>
          <div class="bg-white rounded-xl p-6 border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{t.pricing.faq.q3}</h3>
            <p class="text-gray-600">{t.pricing.faq.a3}</p>
          </div>
          <div class="bg-white rounded-xl p-6 border border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{t.pricing.faq.q4}</h3>
            <p class="text-gray-600">{t.pricing.faq.a4}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { detectUserCurrency, formatPrice, type Currency } from '../../utils/currency';

  const monthlyBtn = document.getElementById('monthly-btn') as HTMLElement;
  const yearlyBtn = document.getElementById('yearly-btn') as HTMLElement;
  const toggleBg = document.getElementById('toggle-bg') as HTMLElement;
  const wrapper = document.getElementById('toggle-wrapper') as HTMLElement;
  const proPrice = document.getElementById('pro-price');
  const subscriptionBtn = document.getElementById('subscription-btn') as HTMLAnchorElement;

  let currentCurrency: Currency = 'USD';
  let yearlyPriceValue = parseInt(proPrice?.dataset.yearlyUsd || '59');
  let monthlyPriceValue = parseInt(proPrice?.dataset.monthlyUsd || '79');
  let yearlyPrice = '';
  let monthlyPrice = '';

  async function initializePricing() {
    currentCurrency = await detectUserCurrency();

    yearlyPrice = formatPrice(yearlyPriceValue, currentCurrency);
    monthlyPrice = formatPrice(monthlyPriceValue, currentCurrency);

    if (proPrice) {
      proPrice.textContent = yearlyPrice;
    }
  }

  const moveBgTo = (btn: HTMLElement) => {
    toggleBg.style.left = `${btn.offsetLeft}px`;
    toggleBg.style.width = `${btn.offsetWidth}px`;
  };

  const selectYearly = () => {
    moveBgTo(yearlyBtn);
    yearlyBtn.classList.replace('text-gray-400', 'text-gray-900');
    monthlyBtn.classList.replace('text-gray-900', 'text-gray-400');
    if (proPrice) proPrice.textContent = yearlyPrice;
    if (subscriptionBtn) subscriptionBtn.href = subscriptionBtn.dataset.yearlyUrl || '';
  };

  const selectMonthly = () => {
    moveBgTo(monthlyBtn);
    monthlyBtn.classList.replace('text-gray-400', 'text-gray-900');
    yearlyBtn.classList.replace('text-gray-900', 'text-gray-400');
    if (proPrice) proPrice.textContent = monthlyPrice;
    if (subscriptionBtn) subscriptionBtn.href = subscriptionBtn.dataset.monthlyUrl || '';
  };

  moveBgTo(yearlyBtn);
  yearlyBtn.addEventListener('click', selectYearly);
  monthlyBtn.addEventListener('click', selectMonthly);

  initializePricing();
</script>
