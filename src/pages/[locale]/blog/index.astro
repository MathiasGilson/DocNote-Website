---
import Layout from '../../../layouts/Layout.astro';
import { locales, isValidLocale, getLocalizedPath, formatDate, type Locale } from '../../../utils/i18n';
import { getEntry, getCollection } from 'astro:content';

export function getStaticPaths() {
  return locales.map((locale) => ({ params: { locale } }));
}

const { locale } = Astro.params;

if (!isValidLocale(locale)) {
  return Astro.redirect('/en/blog');
}

const entry = await getEntry('pages', locale as Locale);
const t = entry.data;

const allPosts = await getCollection('blog', ({ id }) => id.startsWith(`${locale}/`));
const posts = allPosts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const newsPosts = posts.filter(post => post.data.category === 'news');
const researchPosts = posts.filter(post => ['ai', 'documentation', 'practice'].includes(post.data.category));

const categoryColors: Record<string, string> = {
  news: 'bg-purple-100 text-purple-700',
  ai: 'bg-blue-100 text-blue-700',
  documentation: 'bg-green-100 text-green-700',
  practice: 'bg-orange-100 text-orange-700',
};
---

<Layout title={t.blog.title}>
  <section class="pt-32 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
          {t.blog.title}
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {t.blog.subtitle}
        </p>
      </div>

      {newsPosts.length > 0 && (
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">{t.blog.categories.news}</h2>
          <div class="relative">
            <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary-500 to-primary-200"></div>
            <div class="space-y-8">
              {newsPosts.map((post) => {
                const slug = post.slug.replace(`${locale}/`, '');
                return (
                  <article class="relative pl-20">
                    <div class="absolute left-0 top-6 w-16 h-16 bg-white border-4 border-primary-500 rounded-full flex items-center justify-center shadow-lg">
                      <span class="text-xs font-bold text-primary-600">
                        {new Date(post.data.date).toLocaleDateString(locale === 'de' ? 'de-DE' : locale === 'fr' ? 'fr-FR' : 'en-US', { month: 'short' })}
                      </span>
                    </div>
                    <a href={getLocalizedPath(`/blog/${slug}`, locale as Locale)} class="block group">
                      <div class="bg-white rounded-2xl overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow">
                        <div class="md:flex">
                          <div class="md:w-1/3 relative h-48 md:h-auto overflow-hidden">
                            <img
                              src={post.data.image}
                              alt={post.data.title}
                              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            />
                          </div>
                          <div class="md:w-2/3 p-6">
                            <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                              <span>{formatDate(post.data.date, locale as Locale)}</span>
                              <span>{post.data.readTime} {t.blog.minRead}</span>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                              {post.data.title}
                            </h3>
                            <p class="text-gray-600 mb-4">
                              {post.data.excerpt}
                            </p>
                            <div class="flex items-center gap-3">
                              <img
                                src={post.data.authorImage}
                                alt={post.data.author}
                                class="w-10 h-10 rounded-full object-cover"
                              />
                              <div>
                                <p class="text-sm font-medium text-gray-900">{post.data.author}</p>
                                <p class="text-xs text-gray-500">{post.data.authorRole}</p>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </a>
                  </article>
                );
              })}
            </div>
          </div>
        </div>
      )}

      {researchPosts.length > 0 && (
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-8">{t.blog.categories.ai}</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {researchPosts.map((post) => {
              const slug = post.slug.replace(`${locale}/`, '');
              return (
                <article class="bg-white rounded-2xl overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow group">
                  <a href={getLocalizedPath(`/blog/${slug}`, locale as Locale)}>
                    <div class="relative h-48 overflow-hidden">
                      <img
                        src={post.data.image}
                        alt={post.data.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                      <div class="absolute top-4 left-4">
                        <span class={`px-3 py-1 rounded-full text-xs font-medium ${categoryColors[post.data.category]}`}>
                          {t.blog.categories[post.data.category as keyof typeof t.blog.categories]}
                        </span>
                      </div>
                    </div>
                    <div class="p-6">
                      <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                        <span>{formatDate(post.data.date, locale as Locale)}</span>
                        <span>{post.data.readTime} {t.blog.minRead}</span>
                      </div>
                      <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                        {post.data.title}
                      </h2>
                      <p class="text-gray-600 mb-4 line-clamp-2">
                        {post.data.excerpt}
                      </p>
                      <div class="flex items-center gap-3">
                        <img
                          src={post.data.authorImage}
                          alt={post.data.author}
                          class="w-10 h-10 rounded-full object-cover"
                        />
                        <div>
                          <p class="text-sm font-medium text-gray-900">{post.data.author}</p>
                          <p class="text-xs text-gray-500">{post.data.authorRole}</p>
                        </div>
                      </div>
                    </div>
                  </a>
                </article>
              );
            })}
          </div>
        </div>
      )}
    </div>
  </section>
</Layout>
