---
import Layout from '../../../layouts/Layout.astro';
import { locales, isValidLocale, getLocalizedPath, formatDate, type Locale } from '../../../utils/i18n';
import { getEntry, getCollection } from 'astro:content';

export function getStaticPaths() {
  return locales.map((locale) => ({ params: { locale } }));
}

const { locale } = Astro.params;

if (!isValidLocale(locale)) {
  return Astro.redirect('/en/blog');
}

const entry = await getEntry('pages', locale as Locale);
const t = entry.data;

const allPosts = await getCollection('blog', ({ id }) => id.startsWith(`${locale}/`));
const posts = allPosts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const newsPosts = posts.filter(post => post.data.category === 'news');
const researchPosts = posts.filter(post => ['ai', 'documentation', 'practice'].includes(post.data.category));

const categoryColors: Record<string, string> = {
  news: 'bg-purple-100 text-purple-700',
  ai: 'bg-blue-100 text-blue-700',
  documentation: 'bg-green-100 text-green-700',
  practice: 'bg-orange-100 text-orange-700',
};
---

<Layout title={t.blog.title}>
  {newsPosts.length > 0 && (
    <section class="pt-32 pb-16 bg-gradient-to-br from-violet-50 to-indigo-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 id="news-heading" class="text-3xl font-bold text-gray-900 mb-10">{t.blog.categories.news}</h2>
      </div>

      <div class="relative">
        <!-- Scrollable container -->
        <div id="news-timeline" class="overflow-x-auto pb-4 scrollbar-thin">
          <div style="min-width: max-content;">
            <!-- Cards row -->
            <div class="flex gap-6" id="news-cards-row">
              {newsPosts.map((post) => {
                const slug = post.slug.replace(`${locale}/`, '');
                return (
                  <article class="flex-shrink-0" style="width: 300px;">
                    <a href={getLocalizedPath(`/blog/${slug}`, locale as Locale)} class="block group h-full">
                      <div class="bg-white rounded-2xl overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow h-full flex flex-col">
                        <div class="relative h-40 overflow-hidden flex-shrink-0">
                          <img
                            src={post.data.image}
                            alt={post.data.title}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          />
                        </div>
                        <div class="p-5 flex-1">
                          <div class="text-sm text-gray-500 mb-2">
                            <span>{formatDate(post.data.date, locale as Locale)}</span>
                          </div>
                          <h3 class="text-lg font-bold text-gray-900 group-hover:text-violet-600 transition-colors line-clamp-2">
                            {post.data.title}
                          </h3>
                        </div>
                      </div>
                    </a>
                  </article>
                );
              })}
            </div>

            <!-- Timeline: black line with date ovals -->
            <div class="relative mt-8">
              <div class="absolute top-1/2 left-0 right-0 h-px bg-gray-900"></div>
              <div class="relative flex" id="news-dates-row">
                {newsPosts.map((post, index) => {
                  const postDate = new Date(post.data.date);
                  const monthLabel = postDate.toLocaleDateString(locale === 'de' ? 'de-DE' : locale === 'fr' ? 'fr-FR' : 'en-US', { month: 'short' });
                  const yearLabel = String(postDate.getFullYear()).slice(-2);
                  return (
                    <div class="flex-shrink-0 flex justify-center" style={`width: ${index === 0 ? '300px' : 'calc(300px + 24px)'};`}>
                      <span class="px-3 py-1 bg-gray-900 text-white text-xs font-medium rounded-full">
                        {monthLabel} {yearLabel}
                      </span>
                    </div>
                  );
                })}
              </div>
            </div>
          </div>
        </div>

        <!-- Scroll arrows -->
        <button id="scroll-left" class="absolute left-2 top-[40%] -translate-y-1/2 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg flex items-center justify-center hover:bg-white transition-colors z-20 opacity-0 pointer-events-none" aria-label="Scroll left">
          <svg class="w-5 h-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <button id="scroll-right" class="absolute right-2 top-[40%] -translate-y-1/2 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full shadow-lg flex items-center justify-center hover:bg-white transition-colors z-20" aria-label="Scroll right">
          <svg class="w-5 h-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>
    </section>
  )}

  {researchPosts.length > 0 && (
    <section class={`${newsPosts.length > 0 ? '' : 'pt-32'} py-16 bg-gradient-to-b from-gray-50 to-white`}>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">{t.blog.categories.ai}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {researchPosts.map((post) => {
            const slug = post.slug.replace(`${locale}/`, '');
            return (
              <article class="bg-white rounded-2xl overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow group">
                <a href={getLocalizedPath(`/blog/${slug}`, locale as Locale)}>
                  <div class="relative h-48 overflow-hidden">
                    <img
                      src={post.data.image}
                      alt={post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                  <div class="p-6">
                    <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                      <span>{formatDate(post.data.date, locale as Locale)}</span>
                    </div>
                    <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-violet-600 transition-colors">
                      {post.data.title}
                    </h2>
                    <p class="text-gray-600 line-clamp-3">
                      {post.data.excerpt}
                    </p>
                  </div>
                </a>
              </article>
            );
          })}
        </div>
      </div>
    </section>
  )}
</Layout>

<style>
  .scrollbar-thin {
    scrollbar-width: thin;
    scrollbar-color: rgb(167 139 250) transparent;
  }
  .scrollbar-thin::-webkit-scrollbar {
    height: 6px;
  }
  .scrollbar-thin::-webkit-scrollbar-track {
    background: transparent;
  }
  .scrollbar-thin::-webkit-scrollbar-thumb {
    background: rgb(167 139 250);
    border-radius: 3px;
  }
  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    background: rgb(139 92 246);
  }
</style>

<script>
  const timeline = document.getElementById('news-timeline');
  const scrollLeftBtn = document.getElementById('scroll-left');
  const scrollRightBtn = document.getElementById('scroll-right');

  // Align news cards with the max-w-7xl heading container
  const newsHeading = document.getElementById('news-heading');
  const cardsRow = document.getElementById('news-cards-row');
  const datesRow = document.getElementById('news-dates-row');

  function alignNewsSection() {
    if (!newsHeading || !cardsRow) return;
    const left = newsHeading.getBoundingClientRect().left;
    cardsRow.style.paddingLeft = left + 'px';
    if (datesRow) datesRow.style.paddingLeft = left + 'px';
  }

  alignNewsSection();
  window.addEventListener('resize', alignNewsSection);

  function updateArrows() {
    if (!timeline || !scrollLeftBtn || !scrollRightBtn) return;
    const { scrollLeft, scrollWidth, clientWidth } = timeline;

    if (scrollLeft > 10) {
      scrollLeftBtn.classList.remove('opacity-0', 'pointer-events-none');
    } else {
      scrollLeftBtn.classList.add('opacity-0', 'pointer-events-none');
    }

    if (scrollLeft < scrollWidth - clientWidth - 10) {
      scrollRightBtn.classList.remove('opacity-0', 'pointer-events-none');
    } else {
      scrollRightBtn.classList.add('opacity-0', 'pointer-events-none');
    }
  }

  scrollLeftBtn?.addEventListener('click', () => {
    timeline?.scrollBy({ left: -340, behavior: 'smooth' });
  });

  scrollRightBtn?.addEventListener('click', () => {
    timeline?.scrollBy({ left: 340, behavior: 'smooth' });
  });

  timeline?.addEventListener('scroll', updateArrows);
  updateArrows();
</script>
