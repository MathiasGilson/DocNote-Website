---
interface Props {
  translations: any;
}

const { translations: t } = Astro.props;

const testimonials = [
  {
    quote: 'DocNote has transformed my practice. I now spend my evenings with family instead of typing notes.',
    author: 'Dr. Sarah Mueller',
    role: 'General Practitioner',
    location: 'Zurich',
    image: 'https://images.pexels.com/photos/5215024/pexels-photo-5215024.jpeg?auto=compress&cs=tinysrgb&w=150&h=150&fit=crop',
  },
  {
    quote: 'The accuracy is incredible. It understands medical terminology better than any tool I have used before.',
    author: 'Dr. Thomas Keller',
    role: 'Cardiologist',
    location: 'Geneva',
    image: 'https://images.pexels.com/photos/5452293/pexels-photo-5452293.jpeg?auto=compress&cs=tinysrgb&w=150&h=150&fit=crop',
  },
  {
    quote: 'Our clinic saved 15 hours per week. The ROI was immediate and the patients noticed we are more present.',
    author: 'Dr. Anna Weber',
    role: 'Medical Director',
    location: 'Bern',
    image: 'https://images.pexels.com/photos/5327585/pexels-photo-5327585.jpeg?auto=compress&cs=tinysrgb&w=150&h=150&fit=crop',
  },
];
---

<section class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        {t.testimonials.title}
      </h2>
      <p class="text-lg text-gray-600">
        {t.testimonials.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div
          class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-lg transition-shadow"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="flex gap-1 mb-4">
            {[1, 2, 3, 4, 5].map(() => (
              <svg class="w-5 h-5 text-accent-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <blockquote class="text-gray-700 mb-6 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>
          <div class="flex items-center gap-4">
            <img
              src={testimonial.image}
              alt={testimonial.author}
              class="w-12 h-12 rounded-full object-cover"
            />
            <div>
              <p class="font-semibold text-gray-900">{testimonial.author}</p>
              <p class="text-sm text-gray-500">{testimonial.role}, {testimonial.location}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
