---
interface Props {
  translations: any;
}

const { translations: t } = Astro.props;

const features = [
  {
    title: t.compliance.swiss.title,
    description: t.compliance.swiss.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  {
    title: t.compliance.hipaa.title,
    description: t.compliance.hipaa.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  },
  {
    title: t.compliance.iso.title,
    description: t.compliance.iso.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />`,
  },
];
---

<section class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-14">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-gray-900 mb-4">
        {t.compliance.title}
      </h2>
      <p class="text-gray-500 max-w-lg mx-auto">
        {t.compliance.subtitle}
      </p>
    </div>

    <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden shadow-sm">
      <div class="grid lg:grid-cols-5 gap-0">
        <div class="lg:col-span-3 p-6 sm:p-8 lg:p-10">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Data Protection Framework</h3>
          <p class="text-sm text-gray-500 mb-6 leading-relaxed">
            DocNote implements enterprise-grade security with end-to-end encryption, strict access controls, and comprehensive audit logging to protect sensitive patient data.
          </p>

          <div class="bg-gray-50 rounded-lg p-4 border border-gray-100">
            <div class="flex items-center gap-2 mb-3">
              <div class="w-5 h-5 bg-gray-900 rounded flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>
              </div>
              <span class="text-xs font-semibold text-gray-900">DocNote Security Protocol</span>
            </div>
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span>End-to-end encryption : TLS 1.3 (in transit) & AES-256 (at rest)</span>
              </div>
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span>No data stored beyond 48 hours</span>
              </div>
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span>Role-based access control (RBAC)</span>
              </div>
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span>Comprehensive audit trail logging</span>
              </div>
            </div>
          </div>
        </div>

        <div class="lg:col-span-2 bg-gray-50 p-6 sm:p-8 lg:p-10 flex flex-col items-center justify-center border-t lg:border-t-0 lg:border-l border-gray-200">
          <div class="relative w-36 h-36 mb-4" id="accuracy-ring">
            <svg class="w-36 h-36 -rotate-90" viewBox="0 0 144 144">
              <defs>
                <linearGradient id="ring-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" stop-color="#7c3aed" />
                  <stop offset="100%" stop-color="#4f46e5" />
                </linearGradient>
              </defs>
              <circle cx="72" cy="72" r="62" fill="none" stroke="#f3f4f6" stroke-width="8" />
              <circle id="accuracy-circle" cx="72" cy="72" r="62" fill="none" stroke="url(#ring-gradient)" stroke-width="8" stroke-dasharray="389.56" stroke-dashoffset="389.56" stroke-linecap="round" />
            </svg>
            <div class="absolute inset-0 flex flex-col items-center justify-center">
              <span id="accuracy-counter" class="text-3xl font-bold bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent">0%</span>
            </div>
          </div>
          <span class="text-xs text-gray-500 text-center">Transcription accuracy</span>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-6 mt-6">
      {features.map((feature) => (
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <div class="w-9 h-9 bg-gray-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-4.5 h-4.5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <Fragment set:html={feature.icon} />
            </svg>
          </div>
          <h3 class="text-sm font-semibold text-gray-900 mb-1.5">{feature.title}</h3>
          <p class="text-xs text-gray-500 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  const ring = document.getElementById('accuracy-ring');
  const circle = document.getElementById('accuracy-circle') as SVGCircleElement | null;
  const counter = document.getElementById('accuracy-counter');
  if (ring && circle && counter) {
    const target = 99;
    const finalOffset = 11.69;
    const totalDash = 389.56;
    let animated = false;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting && !animated) {
          animated = true;
          circle.style.transition = 'stroke-dashoffset 1.6s cubic-bezier(0.4, 0, 0.2, 1)';
          circle.style.strokeDashoffset = `${finalOffset}`;

          let current = 0;
          const duration = 1600;
          const start = performance.now();
          const tick = (now: number) => {
            const elapsed = now - start;
            const progress = Math.min(elapsed / duration, 1);
            current = Math.round(progress * target);
            counter.textContent = `${current}%`;
            if (progress < 1) requestAnimationFrame(tick);
          };
          requestAnimationFrame(tick);
        }
      });
    }, { threshold: 0.5 });

    observer.observe(ring);
  }
</script>
