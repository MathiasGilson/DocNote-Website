---
interface Props {
  translations: any;
}

const { translations: t } = Astro.props;

const features = [
  {
    title: t.compliance.swiss.title,
    description: t.compliance.swiss.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  {
    title: t.compliance.hipaa.title,
    description: t.compliance.hipaa.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  },
  {
    title: t.compliance.iso.title,
    description: t.compliance.iso.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />`,
  },
];
---

<section class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-4">
      <span class="text-xs font-medium text-gray-400 uppercase tracking-widest">{t.compliance.badge}</span>
    </div>
    <div class="text-center mb-6">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-gray-900 max-w-2xl mx-auto leading-snug">
        {t.compliance.title}
      </h2>
    </div>
    <div class="text-center mb-14">
      <p class="text-gray-500 max-w-lg mx-auto">
        {t.compliance.subtitle}
      </p>
    </div>

    <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden shadow-sm">
      <div class="grid lg:grid-cols-5 gap-0">
        <div class="lg:col-span-3 p-6 sm:p-8 lg:p-10">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">{t.compliance.cardTitle}</h3>
          <p class="text-sm text-gray-500 mb-6 leading-relaxed">
            {t.compliance.cardDescription}
          </p>

          <div class="bg-gray-50 rounded-lg p-4 border border-gray-100">
            <div class="flex items-center gap-2 mb-3">
              <div class="w-5 h-5 bg-gray-900 rounded flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>
              </div>
              <span class="text-xs font-semibold text-gray-900">{t.compliance.protocolTitle}</span>
            </div>
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span>{t.compliance.protocolEncryption}</span>
              </div>
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span>{t.compliance.protocolRetention}</span>
              </div>
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span>{t.compliance.protocolRbac}</span>
              </div>
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg class="w-3.5 h-3.5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span>{t.compliance.protocolAudit}</span>
              </div>
            </div>
          </div>
        </div>

        <div class="lg:col-span-2 p-6 sm:p-8 lg:p-10 flex flex-col items-center justify-center border-t lg:border-t-0 lg:border-l border-gray-200" style="background-color: #e5e7eb;">
          <svg class="hidden" aria-hidden="true">
            <defs>
              <filter id="recolor-indigo" color-interpolation-filters="sRGB">
                <feColorMatrix type="matrix" values="
                  0.125 0.421 0.042 0 0.310
                  0.134 0.451 0.046 0 0.275
                  0.005 0.017 0.002 0 0.898
                  0     0     0     1 0
                " />
              </filter>
            </defs>
          </svg>
          <div class="iso-badge" id="iso-badge">
            <img
              src="/images/depositphotos_315072608-stock-illustration-iso-27001-stamp-sign-information.jpg"
              alt="ISO 27001 Certified"
              class="w-44 h-44 object-contain iso-img"
            />
          </div>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-6 mt-6">
      {features.map((feature) => (
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <div class="w-9 h-9 bg-gray-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-4.5 h-4.5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <Fragment set:html={feature.icon} />
            </svg>
          </div>
          <h3 class="text-sm font-semibold text-gray-900 mb-1.5">{feature.title}</h3>
          <p class="text-xs text-gray-500 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .iso-badge {
    opacity: 0;
    transform: scale(0.9);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .iso-badge.visible {
    opacity: 1;
    transform: scale(1);
  }
  .iso-badge:hover .iso-img {
    transform: scale(1.15);
  }
  .iso-img {
    filter: url(#recolor-indigo);
    transition: transform 0.4s ease-out;
  }
</style>

<script>
  const badge = document.getElementById('iso-badge');
  if (badge) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          badge.classList.add('visible');
        }
      });
    }, { threshold: 0.5 });
    observer.observe(badge);
  }
</script>
