---
interface Props {
    translations: any
}

const logos = [
    { src: "/images/logo_APHP.png", alt: "APHP", size: "normal" },
    { src: "/images/logo_centre_medical_vesenaz.png", alt: "Centre Medical Vesenaz", size: "normal" },
    { src: "/images/logo_clinique_bouchard.png", alt: "Clinique Bouchard", size: "normal" },
    { src: "/images/logo_clinique_Chantecler.png", alt: "Clinique Chantecler", size: "normal" },
    { src: "/images/logo_clinique_argonay.png", alt: "Clinique d'Argonay", size: "normal" },
    { src: "/images/logo_clinique_générale_d'annecy.png", alt: "Clinique Générale d'Annecy", size: "normal" },
    { src: "/images/logo_clinique_st_anne.png", alt: "Clinique St Anne", size: "normal" },
    { src: "/images/logo_cva.png", alt: "CVA", size: "normal" },
    { src: "/images/logo_epic.svg.png", alt: "Epic", size: "normal" },
    { src: "/images/logo_geneclic.png", alt: "Geneclic", size: "large" },
    { src: "/images/logo_mediway.png", alt: "Mediway", size: "normal" },
    { src: "/images/logo_sokle.png", alt: "Sokle", size: "large" }
]
---

<section class="py-10 border-b border-gray-100 overflow-hidden">
    <div class="relative">
        <div class="flex items-center animate-scroll-left" style="width: max-content;">
            {
                [...logos, ...logos, ...logos].map((logo, index) => (
                    <div class="px-8 sm:px-12 flex items-center justify-center" key={index}>
                        <img
                            src={logo.src}
                            alt={logo.alt}
                            class={`w-auto object-contain grayscale opacity-40 hover:grayscale-0 hover:opacity-100 transition-all duration-300 ${logo.size === 'large' ? 'h-12 sm:h-16' : 'h-8 sm:h-12'}`}
                            loading="lazy"
                        />
                    </div>
                ))
            }
        </div>
    </div>
</section>
