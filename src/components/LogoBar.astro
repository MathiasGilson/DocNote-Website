---
interface Props {
    translations: any
}

const logos = [
    { src: "/images/logo_APHP.png", alt: "APHP" },
    { src: "/images/logo_centre_medical_vesenaz.png", alt: "Centre Medical Vesenaz" },
    { src: "/images/logo_clinique_Bouchard.png", alt: "Clinique Bouchard" },
    { src: "/images/logo_clinique_Chantecler.png", alt: "Clinique Chantecler" },
    { src: "/images/logo_clinique_d'argonay.webp", alt: "Clinique d'Argonay" },
    { src: "/images/logo_clinique_générale_d'annecy.png", alt: "Clinique Générale d'Annecy" },
    { src: "/images/logo_clinique_générale_st_anne.svg", alt: "Clinique Générale St Anne" },
    { src: "/images/logo_cva.png", alt: "CVA" },
    { src: "/images/logo_epic.svg.png", alt: "Epic" },
    { src: "/images/logo_geneclic.webp", alt: "Geneclic" },
    { src: "/images/logo_mediway.png", alt: "Mediway" },
    { src: "/images/logo_sokle.webp", alt: "Sokle" }
]
---

<section class="py-10 border-b border-gray-100 overflow-hidden">
    <div class="relative">
        <div class="flex items-center animate-scroll-left" style="width: max-content;">
            {
                [...logos, ...logos, ...logos].map((logo, index) => (
                    <div class="px-8 sm:px-12 flex items-center justify-center" key={index}>
                        <img
                            src={logo.src}
                            alt={logo.alt}
                            class="h-8 sm:h-12 w-auto object-contain grayscale opacity-40 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
                            loading="lazy"
                        />
                    </div>
                ))
            }
        </div>
    </div>
</section>
