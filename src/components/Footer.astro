---
import { getLocalizedPath, type Locale } from '../utils/i18n';

interface Props {
  locale: Locale;
  translations: any;
}

const { locale, translations: t } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-50 border-t border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
      <div class="col-span-2">
        <a href={getLocalizedPath('/', locale)} class="flex items-center gap-2 mb-4">
          <img src="/logo.png" alt="DocNote" class="h-8 w-auto" />
          <span class="text-xl font-bold text-gray-900">DocNote</span>
        </a>
        <p class="text-sm text-gray-600 mb-6 max-w-xs">
          {t.footer.description}
        </p>
        <div class="flex gap-4">
          <a href="#" class="text-gray-400 hover:text-gray-600 transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-gray-600 transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>

      <div>
        <h4 class="text-sm font-semibold text-gray-900 mb-4">{t.footer.product}</h4>
        <ul class="space-y-3">
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.features}</a></li>
          <li><a href={getLocalizedPath('/pricing', locale)} class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.pricing}</a></li>
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.integrations}</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-semibold text-gray-900 mb-4">{t.footer.company}</h4>
        <ul class="space-y-3">
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.about}</a></li>
          <li><a href={getLocalizedPath('/blog', locale)} class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.blog}</a></li>
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.careers}</a></li>
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.contact}</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-semibold text-gray-900 mb-4">{t.footer.legal}</h4>
        <ul class="space-y-3">
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.privacy}</a></li>
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.terms}</a></li>
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{t.footer.gdpr}</a></li>
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-sm text-gray-500">
          &copy; {currentYear} DocNote. {t.footer.rights}
        </p>
        <div class="flex items-center gap-6">
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <span>HIPAA Compliant</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <span>ISO 27001</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
