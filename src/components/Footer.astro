---
import { getLocalizedPath, type Locale } from "../utils/i18n"

interface Props {
    locale: Locale
    translations: any
}

const { locale, translations: t } = Astro.props
const currentYear = new Date().getFullYear()
---

<footer
    id="site-footer"
    class="relative lg:fixed lg:bottom-0 lg:left-0 lg:right-0 bg-gradient-to-b from-gray-900 via-indigo-950 to-indigo-900 text-gray-400 overflow-hidden"
>
    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-14 pb-64">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
            <div class="col-span-2 md:col-span-1">
                <a href={getLocalizedPath("/", locale)} class="flex items-center gap-2 mb-4">
                    <img src="/images/logo.png" alt="DocNote" class="h-6 w-auto" />
                    <span class="text-base font-semibold text-white">DocNote</span>
                </a>
                <p class="text-sm text-white/60 leading-relaxed max-w-xs mb-4">
                    {t.footer.description}
                </p>
                <a href="https://linkedin.com/company/docnote-for-doctors" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-white/60 hover:text-white transition-colors mb-4">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                </a>
                <div class="flex items-center gap-4">
                    <span class="text-xs text-white">HIPAA Compliant</span>
                    <span class="text-xs text-white">ISO 27001</span>
                </div>
                <p class="text-xs text-white/40 mt-4">
                    &copy; {currentYear} DocNote. {t.footer.rights}
                </p>
            </div>

            <div>
                <h4 class="text-xs font-semibold text-white/50 uppercase tracking-wider mb-4">Products</h4>
                <ul class="space-y-2.5">
                    <li>
                        <a href="https://apps.apple.com/ch/app/docnote-for-doctors/id6741168204?l=fr-FR" target="_blank" rel="noopener noreferrer"
                            class="text-sm text-white hover:text-white/70 transition-colors">iOS App</a
                        >
                    </li>
                    <li>
                        <a href="https://play.google.com/store/apps/details?id=app.docnote&pli=1" target="_blank" rel="noopener noreferrer"
                            class="text-sm text-white hover:text-white/70 transition-colors">Android App</a
                        >
                    </li>
                    <li>
                        <a href="https://app-consult-ai.web.app/" target="_blank" rel="noopener noreferrer"
                            class="text-sm text-white hover:text-white/70 transition-colors">Web App</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="text-xs font-semibold text-white/50 uppercase tracking-wider mb-4">{t.footer.company}</h4>
                <ul class="space-y-2.5">
                    <li>
                        <a href={getLocalizedPath("/team", locale)} class="text-sm text-white hover:text-white/70 transition-colors">{t.footer.about}</a
                        >
                    </li>
                    <li>
                        <a href={getLocalizedPath("/contact", locale)} class="text-sm text-white hover:text-white/70 transition-colors"
                            >{t.footer.contact}</a
                        >
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/company/107244351" target="_blank" rel="noopener noreferrer" class="text-sm text-white hover:text-white/70 transition-colors"
                            >LinkedIn</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="text-xs font-semibold text-white/50 uppercase tracking-wider mb-4">{t.footer.legal}</h4>
                <ul class="space-y-2.5">
                    <li>
                        <a href={getLocalizedPath("/privacy", locale)} class="text-sm text-white hover:text-white/70 transition-colors"
                            >{t.footer.privacy}</a
                        >
                    </li>
                    <li>
                        <a href={getLocalizedPath("/terms", locale)} class="text-sm text-white hover:text-white/70 transition-colors">{t.footer.terms}</a
                        >
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 flex justify-center pointer-events-none select-none overflow-hidden">
        <span
            class="text-[clamp(10rem,15vw,18rem)] font-bold leading-none text-white/[0.03] translate-y-1/4"
            >DocNote</span
        >
    </div>
</footer>
