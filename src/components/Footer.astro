---
import { getLocalizedPath, type Locale } from "../utils/i18n"

interface Props {
    locale: Locale
    translations: any
}

const { locale, translations: t } = Astro.props
const currentYear = new Date().getFullYear()
---

<footer class="bg-gray-900 text-gray-400">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-14">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
            <div class="col-span-2 md:col-span-1">
                <a href={getLocalizedPath("/", locale)} class="flex items-center gap-2 mb-4">
                    <img src="/images/logo.png" alt="DocNote" class="h-6 w-auto" />
                    <span class="text-base font-semibold text-white">DocNote</span>
                </a>
                <p class="text-sm text-gray-500 leading-relaxed max-w-xs">
                    {t.footer.description}
                </p>
            </div>

            <div>
                <h4 class="text-xs font-semibold text-gray-300 uppercase tracking-wider mb-4">Navigations</h4>
                <ul class="space-y-2.5">
                    <li>
                        <a
                            href={getLocalizedPath("/", locale)}
                            class="text-sm text-gray-500 hover:text-white transition-colors">{t.footer.features}</a>
                    </li>
                    <li>
                        <a
                            href={getLocalizedPath("/pricing", locale)}
                            class="text-sm text-gray-500 hover:text-white transition-colors">{t.footer.pricing}</a>
                    </li>
                    <li>
                        <a
                            href={getLocalizedPath("/blog", locale)}
                            class="text-sm text-gray-500 hover:text-white transition-colors">{t.footer.blog}</a>
                    </li>
                    <li>
                        <a
                            href={getLocalizedPath("/team", locale)}
                            class="text-sm text-gray-500 hover:text-white transition-colors">{t.footer.about}</a>
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="text-xs font-semibold text-gray-300 uppercase tracking-wider mb-4">{t.footer.company}</h4>
                <ul class="space-y-2.5">
                    <li>
                        <a href="#" class="text-sm text-gray-500 hover:text-white transition-colors"
                            >{t.footer.about}</a>
                    </li>
                    <li>
                        <a href="#" class="text-sm text-gray-500 hover:text-white transition-colors"
                            >{t.footer.careers}</a>
                    </li>
                    <li>
                        <a href="#" class="text-sm text-gray-500 hover:text-white transition-colors"
                            >{t.footer.contact}</a>
                    </li>
                    <li>
                        <a href="#" class="text-sm text-gray-500 hover:text-white transition-colors"
                            >{t.footer.integrations}</a>
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="text-xs font-semibold text-gray-300 uppercase tracking-wider mb-4">{t.footer.legal}</h4>
                <ul class="space-y-2.5">
                    <li>
                        <a href="#" class="text-sm text-gray-500 hover:text-white transition-colors"
                            >{t.footer.privacy}</a>
                    </li>
                    <li>
                        <a href="#" class="text-sm text-gray-500 hover:text-white transition-colors"
                            >{t.footer.terms}</a>
                    </li>
                    <li>
                        <a href="#" class="text-sm text-gray-500 hover:text-white transition-colors">{t.footer.gdpr}</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="mt-12 pt-8 border-t border-gray-800">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                <p class="text-xs text-gray-600">
                    &copy; {currentYear} DocNote. {t.footer.rights}
                </p>
                <div class="flex items-center gap-4">
                    <span class="text-xs text-gray-600">HIPAA Compliant</span>
                    <span class="text-xs text-gray-600">ISO 27001</span>
                </div>
            </div>
        </div>
    </div>
</footer>
