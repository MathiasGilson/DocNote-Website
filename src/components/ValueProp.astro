---
interface Props {
  translations: any;
}

const { translations: t } = Astro.props;

const cards = [
  {
    title: t.valueProp.card1.title,
    description: t.valueProp.card1.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
  },
  {
    title: t.valueProp.card2.title,
    description: t.valueProp.card2.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />`,
  },
  {
    title: t.valueProp.card3.title,
    description: t.valueProp.card3.description,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
  },
];
---

<section class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between mb-12 gap-6">
      <div class="max-w-xl">
        <h2 class="text-2xl sm:text-3xl font-semibold text-gray-900 mb-3">
          {t.valueProp.title}
        </h2>
        <p class="text-gray-500 leading-relaxed">
          {t.valueProp.subtitle}
        </p>
      </div>
      <div class="flex items-center gap-2">
        <button class="vp-prev w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-gray-900 hover:border-gray-400 transition-colors">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        </button>
        <button class="vp-next w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-gray-900 hover:border-gray-400 transition-colors">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </button>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      {cards.map((card) => (
        <div class="bg-white rounded-xl border border-gray-200 p-6 hover:shadow-lg hover:border-gray-300 transition-all duration-300">
          <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mb-16">
            <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <Fragment set:html={card.icon} />
            </svg>
          </div>
          <h3 class="text-base font-semibold text-gray-900 mb-2">{card.title}</h3>
          <p class="text-sm text-gray-500 leading-relaxed">{card.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
