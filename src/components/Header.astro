---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { getLocalizedPath, type Locale } from '../utils/i18n';

interface Props {
  locale: Locale;
  translations: any;
}

const { locale, translations: t } = Astro.props;
const currentPath = Astro.url.pathname;

function isActive(path: string) {
  const localized = getLocalizedPath(path, locale);
  return currentPath === localized || currentPath === localized + '/';
}
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-100">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <div class="flex items-center gap-10">
        <a href={getLocalizedPath('/', locale)} class="flex items-center gap-2.5">
          <img src="/images/logo.png" alt="DocNote" class="h-9 w-auto" />
          <span class="text-xl font-semibold text-gray-900">DocNote</span>
        </a>

        <div class="hidden md:flex items-center gap-8">
          <a href={getLocalizedPath('/tutorial', locale)} class:list={["text-base transition-colors", isActive('/tutorial') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>
            {t.nav.tutorial}
          </a>
          <a href={getLocalizedPath('/demo', locale)} class:list={["text-base transition-colors", isActive('/demo') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>
            {t.nav.demo}
          </a>
          <a href={getLocalizedPath('/pricing', locale)} class:list={["text-base transition-colors", isActive('/pricing') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>
            {t.nav.pricing}
          </a>
          <a href={getLocalizedPath('/blog', locale)} class:list={["text-base transition-colors", isActive('/blog') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>
            {t.nav.blog}
          </a>
          <a href={getLocalizedPath('/team', locale)} class:list={["text-base transition-colors", isActive('/team') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>
            {t.nav.team}
          </a>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <LanguageSwitcher locale={locale} />
        <a
          href="https://apps.apple.com/ch/app/docnote-for-doctors/id6741168204?l=fr-FR"
          class="hidden sm:inline-flex items-center justify-center px-4 py-2.5 text-sm font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 transition-all"
        >
          {t.nav.appStore}
        </a>
        <a
          href="https://play.google.com/store/apps/details?id=app.docnote&pli=1"
          class="hidden sm:inline-flex items-center justify-center px-4 py-2.5 text-sm font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 transition-all"
        >
          {t.nav.googlePlay}
        </a>
        <a
          href="https://app-consult-ai.web.app/"
          class="hidden sm:inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium text-white bg-gradient-to-r from-violet-600 to-indigo-600 rounded-full hover:from-violet-700 hover:to-indigo-700 transition-all shadow-md shadow-indigo-500/20"
        >
          {t.nav.webApp}
        </a>

        <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-gray-100" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden py-6 border-t border-gray-100">
      <div class="flex flex-col gap-6">
        <a href={getLocalizedPath('/tutorial', locale)} class:list={["text-lg", isActive('/tutorial') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>{t.nav.tutorial}</a>
        <a href={getLocalizedPath('/demo', locale)} class:list={["text-lg", isActive('/demo') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>{t.nav.demo}</a>
        <a href={getLocalizedPath('/pricing', locale)} class:list={["text-lg", isActive('/pricing') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>{t.nav.pricing}</a>
        <a href={getLocalizedPath('/blog', locale)} class:list={["text-lg", isActive('/blog') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>{t.nav.blog}</a>
        <a href={getLocalizedPath('/team', locale)} class:list={["text-lg", isActive('/team') ? "bg-gradient-to-r from-violet-600 to-indigo-600 bg-clip-text text-transparent font-semibold" : "text-gray-600 hover:text-gray-900"]}>{t.nav.team}</a>
        <div class="flex flex-col gap-3 mt-2">
          <a href="https://apps.apple.com/ch/app/docnote-for-doctors/id6741168204?l=fr-FR" class="text-base font-medium text-gray-700 bg-gray-100 rounded-full px-6 py-2.5 text-center hover:bg-gray-200 transition-all">{t.nav.appStore}</a>
          <a href="https://play.google.com/store/apps/details?id=app.docnote&pli=1" class="text-base font-medium text-gray-700 bg-gray-100 rounded-full px-6 py-2.5 text-center hover:bg-gray-200 transition-all">{t.nav.googlePlay}</a>
          <a href="https://app-consult-ai.web.app/" class="text-base font-medium text-white bg-gradient-to-r from-violet-600 to-indigo-600 rounded-full px-6 py-2.5 text-center">{t.nav.webApp}</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
